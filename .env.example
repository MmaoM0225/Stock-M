# =============================================================================
# Stock-M 项目环境变量配置示例
# =============================================================================
# 复制此文件为 .env 并填入实际的配置值

# =============================================================================
# 数据源API配置
# =============================================================================

# Tushare Pro API Token (必需)
# 获取地址: https://tushare.pro/register
# 用于获取A股市场数据、财务数据等
TUSHARE_TOKEN=2458806245c421d38f625d98e3663967fba65e68348c9aee8b603011

# Alpha Vantage API Key (可选)
# 获取地址: https://www.alphavantage.co/support/#api-key
# 用于获取美股市场数据
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# News API Key (可选)
# 获取地址: https://newsapi.org/register
# 用于获取外部新闻数据
NEWS_API_KEY=your_news_api_key_here

# =============================================================================
# 数据库配置
# =============================================================================

# PostgreSQL 数据库连接
DATABASE_URL=postgresql://username:password@localhost:5432/stock_m
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_m
DB_USER=username
DB_PASSWORD=password

# Redis 缓存配置
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# 应用配置
# =============================================================================

# 应用环境 (development, production, testing)
ENVIRONMENT=development

# 应用密钥 (用于JWT等加密)
SECRET_KEY=your_super_secret_key_change_this_in_production

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 应用端口
PORT=8000

# 调试模式
DEBUG=true

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/stock_m.log

# =============================================================================
# 请求配置
# =============================================================================

# HTTP请求超时时间 (秒)
REQUEST_TIMEOUT=30

# 最大重试次数
MAX_RETRIES=3

# 重试延迟 (秒)
RETRY_DELAY=1

# =============================================================================
# 缓存配置
# =============================================================================

# 是否启用缓存
CACHE_ENABLED=true

# 缓存TTL (秒)
CACHE_TTL=3600

# 缓存最大条目数
CACHE_MAX_SIZE=1000

# =============================================================================
# 数据获取配置
# =============================================================================

# Yahoo Finance 是否启用
YAHOO_FINANCE_ENABLED=true

# 数据更新频率 (分钟)
DATA_UPDATE_INTERVAL=5

# 历史数据保留天数
HISTORY_DATA_RETENTION_DAYS=365

# =============================================================================
# AI/ML 配置
# =============================================================================

# OpenAI API Key (可选，用于AI功能)
OPENAI_API_KEY=your_openai_api_key_here

# 模型配置
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# =============================================================================
# 邮件配置 (可选)
# =============================================================================

# SMTP服务器配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# 发件人信息
EMAIL_FROM=your_email@gmail.com
EMAIL_FROM_NAME=Stock-M System

# =============================================================================
# 监控和告警配置 (可选)
# =============================================================================

# Sentry DSN (错误监控)
SENTRY_DSN=your_sentry_dsn_here

# 告警配置
ALERT_EMAIL=admin@yourdomain.com
ALERT_WEBHOOK=https://hooks.slack.com/your_webhook_url

# =============================================================================
# 安全配置
# =============================================================================

# CORS允许的域名 (逗号分隔)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# 允许的主机
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =============================================================================
# 第三方服务配置 (可选)
# =============================================================================

# 腾讯云配置 (如果使用)
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key

# 阿里云配置 (如果使用)
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret

# =============================================================================
# 开发配置
# =============================================================================

# 是否启用热重载
HOT_RELOAD=true

# 是否显示SQL查询
SHOW_SQL=false

# 测试数据库
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/stock_m_test

# =============================================================================
# 性能配置
# =============================================================================

# 工作进程数
WORKERS=1

# 最大并发连接数
MAX_CONNECTIONS=100

# 连接池大小
DB_POOL_SIZE=10

# 请求频率限制 (每分钟请求数)
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# 备份配置 (可选)
# =============================================================================

# 数据备份路径
BACKUP_PATH=/path/to/backup

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# 自动备份间隔 (小时)
AUTO_BACKUP_INTERVAL=24
